{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
              
                <th>Nom</th>
                <th>Prenom</th>
          
                <th>Sexe</th>
                <th>Telephone</th>
                <th>Gouvernorat</th>
                <th>Adresse</th>
               
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
        {%if user.roles==["ROLE_PATIENT"]%}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
              
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
           
                <td>{{ user.sexe }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.gouvernorat }}</td>
                <td>{{ user.adresse }}</td>
         
                <td>
                    <a href="{{ path('app_patient_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
            {%endif%}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
